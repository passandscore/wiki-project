
<main>
    <section>
        <h2 class="m-0 mb-1 rounded text-center">All articles</h2>
        <section id="featured">
        {{#if articleSize}}
        <div>
            <ul>
                 {{#each articles}}
                <li>
                    <a href="article/{{title}}">{{title}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        {{else}}
            <h3 class="text-muted text-center">No Articles</h3>
        {{/if}}
    </section>
</main>
